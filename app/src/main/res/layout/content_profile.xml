<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/imagepicker_grey"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Profile"
    tools:showIn="@layout/activity_profile">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/layout">

    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="70dp"

        android:src="@drawable/football"
        android:layout_height="70dp"
        android:id="@+id/image"/>


    <TextView
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:id="@+id/Username"
        android:paddingLeft="20dp"
        android:text="Chester Rooney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OCCUPATION:"
                android:textSize="30dp"
                android:textStyle="bold"/>
        <TextView
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/Occupation"
            android:textColor="@color/red_color_picker"
            android:text="Coach"
            android:layout_alignBottom="@+id/layout"/>
        </LinearLayout>
    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardElevation="6dp"
        android:id="@+id/card"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/sky_blue_color_picker">
        <TableLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="500dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfomance History:"
                android:id="@+id/Perfomance"
                android:textSize="20dp"
                android:onClick="ShowPerfomances"
                android:textColor="@color/violet_color_picker"
                android:textStyle="bold"/>
            <TableRow>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:textSize="20dp"
                android:textColor="@color/violet_color_picker"
                android:textStyle="bold"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Umoja"
                    android:id="@+id/Location"
                    android:textSize="20dp"
                    android:textColor="@color/drawertextftft"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"/>

            </TableRow>
            <TableRow>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEAM'S NAME:"
                android:textSize="20dp"
                android:textColor="@color/violet_color_picker"
                android:textStyle="bold"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manchester City"
                    android:id="@+id/Teams_Name"
                    android:textSize="20dp"
                    android:textColor="@color/drawertextftft"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"/>
            </TableRow>
            <TableRow>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number:"
                    android:textSize="20dp"
                    android:textColor="@color/violet_color_picker"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0702122128"
                    android:id="@+id/PhoneNumber"
                    android:textSize="20dp"
                    android:textColor="@color/drawertextftft"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"/>

            </TableRow>
            <TableRow>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address:"
                    android:textSize="20dp"
                    android:textColor="@color/violet_color_picker"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ChesterRon@Gmail.com"
                    android:id="@+id/Email_Address"
                    android:textSize="20dp"
                    android:textColor="@color/drawertextftft"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"/>

            </TableRow>

            <ImageView
                android:layout_marginTop="5dp"

                android:id="@+id/phoneCall"
                android:onClick="MakeCall"
                android:layout_marginBottom="10dp"
                android:layout_width="70dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_phone_black_24dp"
                android:layout_height="70dp" />









        </TableLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
